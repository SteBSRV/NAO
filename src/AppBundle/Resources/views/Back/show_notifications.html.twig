{% extends "layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <div class="page_title">
            <center><h2>Vos notifications</h2></center>
        </div>
        <div id="observations_wrapper" class="col-xs-12">
            {% if notifications is not empty %}
                {% for notification in notifications %}
                    <div class="observation col-xs-12">
                        <div class="observation_content col-xs-7 col-xs-offset-1  col-md-offset-0 col-md-6 col-lg-7">
                            <h3 class="observation_title">{{ notification.title }}</h3>
                            <p class="observation_meta">{{ notification.createdAt() | date("d/m/Y H:i:s") }}</p>
                            <p class="observation_desc hidden-xs">
                                {{ notification.description }}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            {% elseif user.accountType == "naturaliste" %}
                <div class="observation col-xs-12">
                    <p>Votre demande de compte naturaliste est en cours de validation, veuillez patienter le temps d'Ã©tudier votre profil.</p>
                </div>
            {% else %}
                <div class="observation col-xs-12">
                    <p>Aucune notification pour le moment.</p>
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
