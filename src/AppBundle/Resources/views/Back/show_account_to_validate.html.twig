{% extends "layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <div class="page_title">
            <center><h2>Compte naturaliste Ã  valider</h2></center>
        </div>
        <div id="observations_wrapper" class="col-xs-12">
            {% for user in users %}
                <div class="observation col-xs-12">
                    <div class="col-xs-4 col-md-3">
                        <center>
                            <img class="observation_img text-center" src="{{ vich_uploader_asset(user, 'imageFile') | imagine_filter('my_thumb') }}" />
                        </center>
                    </div>
                    <div class="observation_content col-xs-7 col-xs-offset-1  col-md-offset-0 col-md-6 col-lg-7">
                        <h3 class="observation_title">{{ user.username }}</h3>
                        <p class="observation_meta">Inscrit le : {{ user.updatedAt | date("d/m/Y") }}</p>
                        <p class="observation_desc hidden-xs">
                            {{ user.motivation }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
