{% extends "layout/layout.html.twig" %}

{% block body %}
<div class="row">
	<div id="diapo" class="col-xs-12">
    	<div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
            	{% image '@AppBundle/Resources/public/images/diapo/1.jpg' %}
                	<img src="{{ asset_url }}" alt="Diapo 1" style="width:100%;">
                {% endimage %}
                <div class="carousel-caption">
                    <p class="carousel_text_content">
                        L'association NAO réunit des passionnés d'ornithologie et s'engage quotidiennement pour la protection des oiseaux.
                    </p>
                    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <center><a class="btn btn-info btn_slider" href="{{ path('fos_user_registration_register') }}">Inscrivez-vous</a></center>
                    {% endif %}
                </div>
            </div>
            <div class="item">
            	{% image '@AppBundle/Resources/public/images/diapo/2.jpg' %}
                	<img src="{{ asset_url }}" alt="Diapo 2" style="width:100%;">
                {% endimage %}
                <div class="carousel-caption">
                    <p class="carousel_text_content">
                        L'association NAO réunit des passionnés d'ornithologie et s'engage quotidiennement pour la protection des oiseaux.
                    </p>
                    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <center><a class="btn btn-info btn_slider" href="{{ path('fos_user_registration_register') }}">Inscrivez-vous</a></center>
                    {% endif %}
                </div>
            </div>
            <div class="item">
            	{% image '@AppBundle/Resources/public/images/diapo/3.jpg' %}
                	<img src="{{ asset_url }}" alt="Diapo 3" style="width:100%;">
                {% endimage %}
                <div class="carousel-caption">
                    <p class="carousel_text_content">
                        L'association NAO réunit des passionnés d'ornithologie et s'engage quotidiennement pour la protection des oiseaux.
                    </p>
                    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <center><a class="btn btn-info btn_slider" href="{{ path('fos_user_registration_register') }}">Inscrivez-vous</a></center>
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Suivant</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Précédent</span>
        </a>
    	</div>
	</div>
</div>
<div class="row">
	<div id="home_categories" class="col-xs-12">
        <div class="home_category col-xs-12 col-sm-4">
            <div class="category">
                <a href="{{ path('observations') }}">
                    <div class="category_head">
                        <center>
                        	{% image '@AppBundle/Resources/public/images/home_observe.png' %}
                        		<img class="category_img" src="{{ asset_url }}">
    						{% endimage %}
                        </center>
                    </div>
                </a>
                    <div class="category_content">
                        <h3 class="category_title">Observations</h3>
                        <p class="category_desc">
                            Vous pourrez grâce à notre programme, savoir quels oiseaux ont été observés, en quels nombres et où.
                        </p>
                    </div>
            </div>
        </div>
        <div class="home_category col-xs-12 col-sm-4">
            <div class="category">
                <a href="{{ path('participate') }}">
                    <div class="category_head">
                        <center>
                        	{% image '@AppBundle/Resources/public/images/home_binoculars.png' %}
                        		<img class="category_img" src="{{ asset_url }}">
    						{% endimage %}
                        </center>
                    </div>
                </a>
                    <div class="category_content">
                        <h3 class="category_title">Participer</h3>
                        <p class="category_desc">
                            Réaliser facilement et simplement des observations d'oiseaux durant vos promenades. A partir d'une simple fiche, transmettez rapidement et facilement vos observations que vous soyez sur mobile ou sur votre ordinateur.
                        </p>
                    </div>
            </div>
        </div>
        <div class="home_category col-xs-12 col-sm-4">
            <div class="category">
                <a href="{{ path('map') }}">
                    <div class="category_head">
                        <center>
                        	{% image '@AppBundle/Resources/public/images/home_map.png' %}
                        		<img class="category_img" src="{{ asset_url }}">
                        	{% endimage %}
                        </center>
                    </div>
                </a>
                    <div class="category_content">
                        <h3 class="category_title">Carte intéractive</h3>
                        <p class="category_desc">
                            Retrouvez l'intégralité des observations sur une carte interactive consultable directement en ligne.
                        </p>
                    </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    /* NEWSLETTER Modal */
    var newsDelay = 4000;
    setTimeout(function() {
      $("#newsletter_modal").modal("show");
    }, newsDelay);
</script>
{% endblock %}
