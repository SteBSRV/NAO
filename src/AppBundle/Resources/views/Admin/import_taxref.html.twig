{% extends "layout/admin_layout.html.twig" %}

{% block body %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Tableau de bord <small>Import TAXREF</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Tableau de bord
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    {% if data.flashbag  %}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-info-circle"></i>  <strong>Like SB Admin?</strong> Try out <a href="http://startbootstrap.com/template-overviews/sb-admin-2" class="alert-link">SB Admin 2</a> for additional features!
                </div>
            </div>
        </div>
    {% endif %}
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-file-text"></i> Structure du fichier d'importation CSV</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>nom_de_reference</th>
                                    <th>nom_vernaculaire</th>
                                    <th>ordre</th>
                                    <th>famille</th>
                                    <th>reference</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Accipiter bicolor (Vieillot, 1817)</td>
                                    <td>Épervier bicolore</td>
                                    <td>Accipitriformes</td>
                                    <td>Accipitridae</td>
                                    <td>441604</td>
                                </tr>
                                <tr>
                                    <td>Acrocephalus arundinaceus (Linnaeus, 1758)</td>
                                    <td>Rousserolle turdoïde</td>
                                    <td>Passeriformes (Passereaux)</td>
                                    <td>Sylviidae</td>
                                    <td>4198</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="col-xs-4">
                            <div class="form-group">
                                {{ form_errors(form.attachement) }}
                                {{ form_widget(form.attachement, {'attr':{'class': 'form-control'}}) }}
                            </div>
                        </div>
                        {{ form_widget(form.valider, {'attr':{'class': 'btn btn-info center-block'}}) }}
                    {{ form_end(form) }}
                    {% image '@AppBundle/Resources/public/model/import_taxref.csv' %}
                        <a href="{{ asset_url }}" alt="Télécharger un modèle"><button id="csv_import" class="btn btn-primary"><i class="fa fa-fw fa-download"></i> Télécharger un modèle (CSV)</button></a>
                    {% endimage %}
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
