{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal mg-t-50">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
            <input class="form-control text-center" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" required="required" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
            <input class="form-control text-center" type="password" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12 text-center">
            <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input class="btn btn-info center-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </div>
</form>
