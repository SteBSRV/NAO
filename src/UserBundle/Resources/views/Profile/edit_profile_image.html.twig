                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control center-block', 'style': 'display:none;'}}) }}
            </center>
        </label>
    </div>
</div>
<div class="form-group">
    <div class="col-md-12">
        <input class="btn btn-info center-block" type="submit" value="Modifier" />
    </div>
</div>
