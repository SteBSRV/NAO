    <div class="col-sm-12">
        <label id="label_image_profile" class="center-block">
            <div class="center-block" id='new_profile_img' style="display: none;"></div>
            <img id="old_profile_img" class="center-block" src="{{ vich_uploader_asset(user, 'imageFile') | imagine_filter('my_thumb') }}"/>
