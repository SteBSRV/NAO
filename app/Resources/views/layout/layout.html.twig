<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}Nos amis les oiseaux{% endblock %}</title>
    <link rel="icon" href="../../favicon.ico">
    {% stylesheets 'bundles/app/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" /> 
    {% endstylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/cerulean/bootstrap.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>

<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <div id="close_menu"><span><i class="fa fa-times fa-lg"></i></span></div>
                <li>
                    <div id="user_profil_img">
                        {% image '@AppBundle/Resources/public/images/anonymous.png' %}
                            <img class="user_img" src="{{ asset_url }}" alt="">
                        {% endimage%}
                    </div>
                </li>
                <li>
                    <a href="{{ path('homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('observations') }}">Observations</a>
                </li>
                <li>
                    <a href="{{ path('participate') }}">Participer</a>
                </li>
                <li>
                    <a href="{{ path('map') }}">Carte intéractive</a>
                </li>
                <li>
                    <a href="{{ path('faq') }}">F.A.Q.</a>
                </li>
                <li>
                    <a href="{{ path('account') }}">(Mon compte)</a>
                </li>
                <li>
                    <a href="{{ path('logout') }}">(Déconnexion)</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- page content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <!-- Navbar -->
                <div class="row">
                    <header class="col-xs-12">
                        <h1>
                            {% image '@AppBundle/Resources/public/images/nao_full_logo.png' %}
                                <img id="header_img" src="{{ asset_url }}" alt="Nos amis les oiseaux">
                            {% endimage %}
                        </h1>
                        <span id="open_menu"><i class="fa fa-bars fa-3x"></i></span>
                        <div class="nav_desktop visible-md visible-lg">
                            <ul>
                                <li>
                                    <a href="{{ path('homepage') }}">Accueil</a>
                                </li>
                                <li>
                                    <a href="{{ path('observations') }}">Observations</a>
                                </li>
                                <li>
                                    <a href="{{ path('participate') }}">Participer</a>
                                </li>
                                <li>
                                    <a href="{{ path('map') }}">Carte intéractive</a>
                                </li>
                                <li>
                                    <a href="{{ path('faq') }}">F.A.Q.</a>
                                </li>
                                <li>
                                    <a href="{{ path('account') }}">(Mon compte)</a>
                                </li>
                                <li>
                                    <a href="{{ path('logout') }}">(Déconnexion)</a>
                                </li>
                            </ul>
                        </div>
                    </header>
                </div>
                <!-- /Navbar -->
                <!-- Content -->
                {% block body %}
                {% endblock %}
                <div id="footer-wrapper">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-12">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- Bootstrap core JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    {% block javascripts %} {% javascripts '@AppBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %} {% endblock %}
</body>
</html>
